<style type="text/css">
    .about-info-content a + a {
        margin-left: 5px;
    }
    .about-info-content p {
        margin-bottom: 0px;
    }
    .line-icon-warp .date-range {
      position: relative;
      bottom: 10px;
      left: 49px;
    }
    .line-icon-warp .fa-music::before {
      content: "\f001";
      position: relative;
      right: 1px;
    }
    .line-content-box p {
        margin-bottom: 0px;
    }
    .line-content-box img {
        float: left;
        margin-right: 5px;
        margin-bottom: 5px;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-male"></span>
        <strong>简介</strong>
    </div>
    <ul class="list-group">
        <li class="list-group-item">
            <div class="about-info-icon">
                <span class="fa fa-info-circle"></span>
            </div>
            <div class="about-info-content">
                <% if (theme.contents.about.introA) { %>
                    <%- markdown(theme.contents.about.introA) %>
                <% } else { %>
                    <%= __("contentsNo") %>
                <% } %>
            </div>
        </li>
        <li class="list-group-item">
            <div class="about-info-icon">
                <span class="fa fa-code"></span>
            </div>
            <div class="about-info-content">
                <% if (theme.contents.about.introB) { %>
                    <%- markdown(theme.contents.about.introB) %>
                <% } else { %>
                    <%= __("contentsNo") %>
                <% } %>
            </div>
        </li>
        <li class="list-group-item">
            <div class="about-info-icon">
                <span class="fa fa-battery-full"></span>
            </div>
            <div class="about-info-content">
                <strong>已解锁的技能：</strong><br>
                <% if (theme.contents.about.skillDone100) { %>
                <ul>
                    <% for (var i in theme.contents.about.skillDone100) { %>
                    <li><%- theme.contents.about.skillDone100[i] %></li>
                    <% } %>
                </ul>
                <% } else { %>
                    <%= __("contentsNo") %>
                <% } %>
            </div>
        </li>
        <li class="list-group-item">
            <div class="about-info-icon">
                <span class="fa fa-battery-three-quarters"></span>
            </div>
            <div class="about-info-content">
                <strong>已了解的技能:</strong><br>
                <% if (theme.contents.about.skillDone075) { %>
                <ul>
                    <% for (var i in theme.contents.about.skillDone075) { %>
                    <li><%- theme.contents.about.skillDone075[i] %></li>
                    <% } %>
                </ul>
                <% } else { %>
                    <%= __("contentsNo") %>
                <% } %>
            </div>
        </li>
        <li class="list-group-item">
            <div class="about-info-icon">
                <span class="fa fa-battery-half"></span>
            </div>
            <div class="about-info-content">
                <strong>正解锁的技能：</strong><br>
                <% if (theme.contents.about.skillDone050) { %>
                <ul>
                    <% for (var i in theme.contents.about.skillDone050) { %>
                    <li><%- theme.contents.about.skillDone050[i] %></li>
                    <% } %>
                </ul>
                <% } else { %>
                    <%= __("contentsNo") %>
                <% } %>
            </div>
        </li>
        <li class="list-group-item">
            <div class="about-info-icon">
                <span class="fa fa-share-alt"></span>
            </div>
            <div class="about-info-content">
                <strong style="margin-bottom:10px;">社交信息：</strong><br>
                <% if (theme.contents.about.social) { %>
                    <% for (var i in theme.contents.about.social) { %>
                <a href="<%- theme.contents.about.social[i].url %>" title="<%- theme.contents.about.social[i].intro %>"
                   style="text-decoration:none;">
                    <button type="button"
                            class="btn
                        <% if (theme.contents.about.social[i].colorBg) { %>
                            <% if (theme.contents.about.social[i].colorBg.indexOf("btn") != -1) { %>
                                <%- theme.contents.about.social[i].colorBg %>
                            <% } else { %>
                                " style="margin-top:10px;
                                         background-color:<%- theme.contents.about.social[i].colorBg %>;
                                         border-color:<%- theme.contents.about.social[i].colorBg %>;
                                         color:<%- theme.contents.about.social[i].colorFt %>;
                            <% } %>
                        <% } else { %>
                            btn-primary
                        <% } %>"
                           style="margin-top:10px;">
                        <span class="<%- theme.contents.about.social[i].icon %>">
                            <%- theme.contents.about.social[i].title %>
                        </span>
                    </button>
                </a>
                    <% } %>
                <% } else { %>
                    <%= __("contentsNo") %>
                <% } %>
            </div>
        </li>
    </ul>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <span class="fa fa-clock-o"></span>
        <strong>我的时间线</strong>
    </div>

    <div class="line-warp">
        <div class="timeline-header">
        <span class="badge">
            <span class="fa fa-clock-o"></span>我的时间线
        </span>
    </div>

    <% if (theme.contents.about.timeline) { %>
        <% for (var i in theme.contents.about.timeline) { %>
            <% if (theme.contents.about.timeline[i].icon != undefined) { %>
                <div class="line-item">
                    <div class="line-icon-warp">
                        <span class="fa-stack">
                            <i class="fa fa-circle fa-stack-2x"
                               style="color:<%- theme.contents.about.timeline[i].colorBg %>;"></i>
                            <i class="<%- theme.contents.about.timeline[i].icon %> fa-stack-1x"
                               style="color:
                                <% if (theme.contents.about.timeline[i].colorFt) { %>
                                    <%- theme.contents.about.timeline[i].colorFt %>
                                <% } else { %>
                                    white
                                <% } %>;">
                            </i>
                        </span>
                        <% if (theme.contents.about.timeline[i].date instanceof Array) { %>
                        <span class="badge">
                            <%- theme.contents.about.timeline[i].date[0] %>
                        </span>
                        <br>
                        <span class="badge date-range">
                            <%- theme.contents.about.timeline[i].date[1] %>
                        </span>
                        <% } else { %>
                        <span class="badge">
                            <%- theme.contents.about.timeline[i].date %>
                        </span>
                        <% } %>
                    </div>
                    <div class="line-content-box">
                        <%- markdown(theme.contents.about.timeline[i].content) %>
                    </div>
                </div>
            <% } else { %>
                <div class="breakline">
                    ------------------&nbsp;&nbsp;
                    <span class="badge">
                        &nbsp;&nbsp;<%- theme.contents.about.timeline[i].date %>&nbsp;&nbsp;
                    </span>
                    &nbsp;&nbsp;------------------
                </div>
            <% } %>
        <% } %>
    <% } else { %>
    <div class="line-item">
        <div class="line-icon-warp">
            <span class="fa-stack">
                <i class="fa fa-circle fa-stack-2x" style="color:gold;"></i>
                <i class="fa fa-lightbulb-o fa-stack-1x" style="color:white;"></i>
            </span>
            <span class="badge">刚才</span>
        </div>
        <div class="line-content-box">
            正在努力学习中。。。
        </div>
    </div>
    <% } %>
</div>
