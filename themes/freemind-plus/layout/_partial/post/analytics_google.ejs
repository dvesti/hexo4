<% if (theme.analytics.google.enable) { %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=<%= theme.analytics.google.siteid %>"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){
            dataLayer.push(arguments);
        }
        gtag("js", new Date());
        gtag("config", "<%= theme.analytics.google.siteid %>");
    </script>
<% } %>
